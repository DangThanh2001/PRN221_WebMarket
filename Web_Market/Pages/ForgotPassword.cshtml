@page
@model Web_Market.Pages.ForgotPasswordModel
@{
}
<div class="preloader">
    <div class="loader">
        <div class="ytp-spinner">
            <div class="ytp-spinner-container">
                <div class="ytp-spinner-rotator">
                    <div class="ytp-spinner-left">
                        <div class="ytp-spinner-circle"></div>
                    </div>
                    <div class="ytp-spinner-right">
                        <div class="ytp-spinner-circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="banner-area bg_cover">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="banner-content">
                    <h1 class="text-white">Login Page</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login Page</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="login-area pt-70 pb-70">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="login-wrapper box-style">
                    <h3 class="mb-20">Forgot</h3>
                    @{
                        if (ViewBag.change == null)
                        {
                            <form asp-page-handler="forgot" method="post">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="row">

                                    <div class="col-12">
                                        <div class="single-form mb-20">
                                            <label class="mb-2">Email of your Acount</label>
                                            <input type="text" id="email" name="email" placeholder="Email" class="py-2 px-3 mb-0 rounded border">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="single-form mb-30">
                                            <button class="main-btn btn-hover py-2 px-5 rounded">Summit</button>
                                            @{
                                                if (ViewBag.success != null)
                                                {
                                                    <span class="text-danger">@ViewBag.success</span>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <form asp-page-handler="changepassword" method="post">
                                <div class="col-12">
                                    <div class="single-form mb-20">
                                        <label class="mb-2">New Password</label>
                                        <input type="text" id="mail" name="email" hidden value="@ViewBag.email" />
                                        <input type="password" id="pas" name="Password" placeholder="Password" class="py-2 px-3 mb-0 rounded border">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="single-form mb-30">
                                        <button class="main-btn btn-hover py-2 px-5 rounded">Change</button>
                                        
                                    </div>
                                </div>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>


<section class="subscribe-area">
    <div class="container">
        <div class="subscribe-wrapper bg_cover">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="subscribe-content section-title">
                        <h1 class="text-white">Subscribe Our Newsletter</h1>
                        <p class="text-white">Buy and sell everything from used cars to mobile phones and computer or search for property.</p>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="subscribe-form-wrapper">
                        <form action="#" class="subscribe-form">
                            <input type="email" name="sub-email" placeholder="Enter your Email">
                            <button><i class="lni lni-telegram-original"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="client-logo-area pt-140 pb-110">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-xl-6 col-lg-7 col-md-10">
                <div class="text-center section-title mb-60">
                    <h1>Our Trusted Company</h1>
                    <p>
                        Lorem ipsum dolor sit amet, consetetur sadipscing elitr sed diam nonumy eirmod tempor invidunt ut labore et
                        dolore magna.
                    </p>
                </div>
            </div>
        </div>
        <div class="client-logo-wrapper">
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="single-logo">
                        <img src="~/images/client-logo/uideck-logo.svg" alt="">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="single-logo">
                        <img src="~/images/client-logo/pagebulb-logo.svg" alt="">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="single-logo">
                        <img src="~/images/client-logo/lineicons-logo.svg" alt="">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="single-logo">
                        <img src="~/images/client-logo/graygrids-logo.svg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



