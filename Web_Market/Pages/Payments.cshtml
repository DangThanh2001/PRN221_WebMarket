                        <div class="title">
                            <h3>Payments</h3>
                        </div>
                        <div class="payments-wrapper">
                            <form action="#">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="left-wrapper box-style mb-30">
                                            <h5 class="mb-25">Your Order</h5>
                                            <ul class="checkout">
                                                <li>
